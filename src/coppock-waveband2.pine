//@version=5
indicator(title = "Coppock MultiBand", timeframe="", timeframe_gaps=true)
wmaLength1 = input(title="WMA Length1", defval=128)
wmaLength2 = input(title="WMA Length2", defval=64)
wmaLength3 = input(title="WMA Length3", defval=128)
wmaLength4 = input(title="WMA Length4", defval=48)
wmaLength5 = input(title="WMA Length5", defval=32)
wmaLength6 = input(title="WMA Length6", defval=88)
wmaLength7 = input(title="WMA Length7", defval=64)
wmaLength8 = input(title="WMA Length8", defval=12)

longRoCLength1 = input(title="Long RoC Length1", defval=128)
shortRoCLength1 = input(title="Short RoC Length1", defval=256)
longRoCLength2 = input(title="Long RoC Length2", defval=16)
shortRoCLength2 = input(title="Short RoC Length2", defval=64)
longRoCLengthx2 = input(title="Long RoC Length3", defval=8)
shortRoCLengthx2 = input(title="Short RoC Length3", defval=24)
source = close
curve1 = ta.sma(ta.roc(source, longRoCLength1) + ta.roc(source, shortRoCLength1), wmaLength1)
curve2 = ta.sma(ta.roc(source, longRoCLength2) + ta.roc(source, shortRoCLength2), wmaLength2)
curve3 = ta.wma(ta.roc(source, longRoCLength1) + ta.roc(source, shortRoCLength2), wmaLength2)
curve4 = ta.wma(ta.roc(source, longRoCLength2) + ta.roc(source, shortRoCLength1), wmaLength1)
curve5 = ta.vwma(ta.roc(source, longRoCLength1) + ta.roc(source, shortRoCLength2), wmaLength3)
curve6 = ta.vwma(ta.roc(source, longRoCLength2) + ta.roc(source, shortRoCLength1), wmaLength4)
curve7 = ta.wma(ta.roc(source, longRoCLength1+longRoCLength2/2) + ta.roc(source, shortRoCLength2+shortRoCLength1/2), wmaLength3)
curve8 = ta.wma(ta.roc(source, longRoCLength2+longRoCLength2/2) + ta.roc(source, shortRoCLength1+shortRoCLength2/2), wmaLength4)
curve9 = ta.vwma(ta.roc(source, longRoCLengthx2+longRoCLengthx2/3*2) + ta.roc(source, shortRoCLength1-shortRoCLength2/3), wmaLength5)
curve10 = ta.vwma(ta.roc(source, longRoCLengthx2+longRoCLengthx2/3*2) + ta.roc(source, shortRoCLength1-shortRoCLength2/3), wmaLength6)

color1 = input.color(color.new(#023ead, 20), title="Line Colour1")
color2 = input.color(color.new(#fffcfe, 80), title="Line Colour2")
color3 = input.color(color.new(#37eb34, 50), title="Line Colour3")
color4 = input.color(color.new(#d0f500, 60), title="Line Colour4")
color5 = input.color(color.new(#19f2fa, 50), title="Line Colour5")
color6 = input.color(color.new(#000000, 0), title="Line Colour6")
color7 = input.color(color.new(#000000, 0), title="Line Colour7")
color8 = input.color(color.new(#FF0000, 50), title="Line Colour8")
color9 = input.color(color.new(#ff00cc, 60), title="Line Colour9")
color10 = input.color(color.new(#000000, 0), title="Line Colour10")


plot(curve1, color=color1 ,style = plot.style_areabr)
plot(curve2, color=color2, style = plot.style_areabr)
plot(curve3, color=color3, style = plot.style_areabr)
plot(curve4, color=color4, style = plot.style_areabr)
plot(curve5, color=color5, style = plot.style_areabr)
plot(curve6, color=color6, style = plot.style_areabr)
plot(curve7, color=color7, style = plot.style_areabr)
plot(curve8, color=color8, style = plot.style_areabr)
plot(curve9, color=color9, style = plot.style_areabr)
plot(curve10, color=color10, style = plot.style_areabr)
