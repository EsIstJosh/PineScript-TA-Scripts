//@version=5
indicator(title = "Coppock MultiBand", timeframe="", timeframe_gaps=true)
wmaLength1 = input(title="WMA Length1", defval=64)
wmaLength2 = input(title="WMA Length2", defval=8)
wmaLength3 = input(title="WMA Length3", defval=128)
wmaLength4 = input(title="WMA Length4", defval=32)
wmaLength5 = input(title="WMA Length4", defval=4)
wmaLength6 = input(title="WMA Length4", defval=248)
wmaLength7 = input(title="WMA Length4", defval=48)
wmaLength8 = input(title="WMA Length4", defval=24)

longRoCLength1 = input(title="Long RoC Length1", defval=4)
shortRoCLength1 = input(title="Short RoC Length1", defval=16)
longRoCLength2 = input(title="Long RoC Length2", defval=32)
shortRoCLength2 = input(title="Short RoC Length2", defval=8)
longRoCLengthx2 = input(title="Long RoC Length2", defval=64        )
shortRoCLengthx2 = input(title="Short RoC Length2", defval=128)
source = close
curve1 = ta.sma(ta.roc(source, longRoCLength1) + ta.roc(source, shortRoCLength1), wmaLength1)
curve2 = ta.sma(ta.roc(source, longRoCLength2) + ta.roc(source, shortRoCLength2), wmaLength2)
curve3 = ta.hma(ta.roc(source, longRoCLength1) + ta.roc(source, shortRoCLength2), wmaLength2)
curve4 = ta.sma(ta.roc(source, longRoCLength2) + ta.roc(source, shortRoCLength1), wmaLength1)
curve5 = ta.vwma(ta.roc(source, longRoCLength1) + ta.roc(source, shortRoCLength2), wmaLength3)
curve6 = ta.vwma(ta.roc(source, longRoCLength2) + ta.roc(source, shortRoCLength1), wmaLength4)
curve7 = ta.wma(ta.roc(source, longRoCLength1+longRoCLength2/2) + ta.roc(source, shortRoCLength2+shortRoCLength1/2), wmaLength3)
curve8 = ta.wma(ta.roc(source, longRoCLength2+longRoCLength2/2) + ta.roc(source, shortRoCLength1+shortRoCLength2/2), wmaLength4)
curve9 = ta.ema(ta.roc(source, longRoCLengthx2+longRoCLengthx2/3*2) + ta.roc(source, shortRoCLength1-shortRoCLength2/3), wmaLength5)
curve10 = ta.ema(ta.roc(source, longRoCLengthx2+longRoCLengthx2/3*2) + ta.roc(source, shortRoCLength1-shortRoCLength2/3), wmaLength6)
plot(curve1, color=color.lime, style = plot.style_areabr)
plot(curve2, color=color.green, style = plot.style_areabr)
plot(curve3, color=color.yellow, style = plot.style_areabr)
plot(curve4, color=color.orange, style = plot.style_areabr)
plot(curve5, color=color.red, style = plot.style_areabr)
plot(curve6, color=color.maroon, style = plot.style_areabr)
plot(curve7, color=color.purple, style = plot.style_areabr)
plot(curve8, color=color.blue, style = plot.style_areabr)
plot(curve9, color=color.white, style = plot.style_areabr)
plot(curve10, color=color.black, style = plot.style_areabr)